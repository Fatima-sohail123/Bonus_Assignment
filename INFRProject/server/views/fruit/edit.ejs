<%- ("include ../Partials/header.ejs")%>
<%- ("include ../Partials/main_nav.ejs")%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="Type_of_Fruit_or_VeggieTextField">Type of Fruit or Veggie</label>
                    <input type="text" class="form-control" id="Type_of_Fruit_or_VeggieTextField" placeholder="Enter the Fruit Title" name="Name" value="<%= Fruit.Type_of_Fruit_or_Veggie %>" required>
                </div>
                <div class="form-group">
                    <label for="SeedsTextField">Seeds</label>
                    <input type="text" class="form-control" id="SeedsTextField" placeholder="Enter the Fruit Seeds" name="Seeds" value="<%= Fruit.Seeds %>" required>
                </div>
                <div class="form-group">
                    <label for="OrganicTextArea">Organic</label>
                    <textarea type="text" class="form-control" id="OrganicTextArea"  placeholder="enter the Fruit Organic" name="Organic" required><%= Fruit.Organic %></textarea>
                </div>
                <div class="form-group">
                    <label for="PoundsTextField">Pounds</label>
                    <input type="text" class="form-control" id="PoundsTextField" placeholder="Enter the Pounds year" name="Pounds" value="<%= Fruit.Pounds %>" required>
                </div>
                <div class="form-group">
                    <label for="CostTextField">Cost</label>
                    <input type="text" class="form-control" id="CostTextField" placeholder="Fruit's Cost" name="Cost" value="<%= Fruit.Cost %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ("../Partials/footer.ejs")%>